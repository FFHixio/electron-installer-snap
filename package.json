{
  "name": "electron-installer-snap",
  "version": "0.1.0",
  "description": "Build snapcraft packages for Electron applications",
  "author": "Mark Lee",
  "license": "MIT",
  "main": "src/index.js",
  "bin": {
    "electron-installer-snap": "src/cli.js"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "npm run lint && mocha test"
  },
  "repository": "electron-userland/electron-installer-snap",
  "keywords": [
    "electron",
    "installer",
    "snap",
    "snapcraft",
    "linux"
  ],
  "devDependencies": {
    "eslint": "^4.7.2",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^3.5.3"
  },
  "dependencies": {
    "asar": "^0.13.0",
    "cross-spawn-promise": "^0.10.1",
    "debug": "^3.0.1",
    "fs-extra": "^4.0.2",
    "js-yaml": "^3.10.0",
    "lodash.filter": "^4.6.0",
    "lodash.merge": "^4.6.0",
    "nodeify": "^1.0.1",
    "pify": "^3.0.0",
    "which": "^1.3.0",
    "yargs": "^9.0.1"
  },
  "engines": {
    "node": ">= 4.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:promise/recommended",
      "standard"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "plugins": [
      "promise"
    ],
    "rules": {
      "indent": [
        "error",
        2,
        {
          "CallExpression": {
            "arguments": "first"
          },
          "SwitchCase": 1
        }
      ],
      "strict": "error"
    }
  }
}
